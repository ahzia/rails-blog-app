<div class="container">
<div class="row m-4">
<div class="card bio">
<div class="card-body d-inline-flex">
<p  class="comment-author"><%= comment.author.name %>: <%= comment.text %></p>
<% if can? :destroy, comment%>
<%= link_to user_post_comment_path(comment.author_id, comment.post_id, comment.id), method: :delete do %>
  <div class="text-danger" role='button'>
    <%= fa_icon "trash"%>
  </div>
<% end %>
<% end %>
</div>
</div>
</div>
</div>