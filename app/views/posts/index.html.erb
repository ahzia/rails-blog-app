<%= render partial: 'users/user_card', object: @user, as: 'user' %>
<% @posts.each do |post| %>
<%= render partial: 'post_card', object: post, as: 'post' %>
<% post.recent_comments.each do |comment| %>
<%= render partial: 'comment_card', object: comment, as: 'comment' %>
<% end %> 
<% end %>
<div class="container">
<div class="row">
<div class="col text-center">
<button class="btn btn-primary"> Pagination </button>
</div>
</div>
</div>
