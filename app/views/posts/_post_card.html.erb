<div class="container">
  <div class="row m-4">
    <div class="card bio">
      <div class="card-body">
        <a href="/users/<%= post.author_id %>/posts/<%= post.id %>" >
        <p class="card-title post-title"><%= post.title %></p>
        </a>
        <p class="card-text post-text"><%= post.text %><p>
          <div class="post-info d-flex justify-content-end">    
            <p class="m-2"> Comment:<%= post.likes_counter %></p>
            <p class="m-2"> Likes:<%= post.comment_counter %></p>
          </div>
      </div>
    </div>
  </div>
</div>